# ===========================================
# ERA BANYU BACKEND - ENVIRONMENT TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values

# -------------------------------
# APPLICATION SETTINGS
# -------------------------------
NODE_ENV=production
PORT=5000

# -------------------------------
# SECURITY & AUTHENTICATION
# -------------------------------
# Generate strong random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars-minimum
JWT_EXPIRES_IN=24h

# -------------------------------
# CORS CONFIGURATION
# -------------------------------
# For production, specify exact frontend URL
CORS_ORIGIN=https://your-frontend-domain.com

# -------------------------------
# DATABASE & FIREBASE
# -------------------------------
FIREBASE_PROJECT_ID=your-firebase-project-id

# Option 1: Use JSON file (recommended for development)
# Place firebase-adminsdk.json in backend/ folder

# Option 2: Use environment variables (recommended for production)
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# -------------------------------
# EMAIL CONFIGURATION (Optional)
# -------------------------------
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=Era Banyu <noreply@erabanyu.com>

# -------------------------------
# RATE LIMITING (Optional)
# -------------------------------
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------
# LOGGING (Optional)
# -------------------------------
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# -------------------------------
# FILE UPLOAD (Optional)
# -------------------------------
# MAX_FILE_SIZE=10485760
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# -------------------------------
# MONITORING (Optional)
# -------------------------------
# SENTRY_DSN=your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# -------------------------------
# BACKUP & MAINTENANCE (Optional)
# -------------------------------
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# MAINTENANCE_MODE=false